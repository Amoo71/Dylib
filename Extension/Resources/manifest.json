{
    "manifest_version": 3,
    "name": "Cookie Injector",
    "version": "1.0",
    "description": "Inject cookies and emulate macOS browsing on iOS Safari",
    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "cookies",
        "webRequest",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-48.png",
            "32": "images/icon-96.png",
            "48": "images/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["injected.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
